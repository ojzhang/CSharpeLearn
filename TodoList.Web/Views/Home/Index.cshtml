@using TodoList.Core.Models
@using Microsoft.Extensions.Localization
@using TodoList.Web.Views.Home
@inject IStringLocalizer<IndexView> Localizer
@model TodoList.Web.Models.HomeViewModels.IndexViewModel
@{
    ViewData["Title"] = Localizer["Welcome"];
}

<div class="text-center">
    <h1 class="display-4">@Localizer["Welcome"]</h1>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3>@Localizer["TodoListHeader"]</h3>
                <a href="@Url.Action("TodoList", "Home")"
                    class="btn btn-primary float-right">@Localizer["AddNewItem"]</a>
            </div>
            <div class="card-body">
                @if (Model.TodoItems.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>@Localizer["Title"]</th>
                                    <th>@Localizer["Content"]</th>
                                    <th>@Localizer["DueDate"]</th>
                                    <th>@Localizer["Status"]</th>
                                    <th>@Localizer["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.TodoItems)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Content</td>
                                        <td>
                                            @if (item.DueTo != NodaTime.Instant.MinValue)
                                            {
                                                @item.DueTo.ToDateTimeUtc().ToString("yyyy-MM-dd HH:mm")
                                            }
                                            else
                                            {
                                                <span>@Localizer["NoDueDate"]</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Done)
                                            {
                                                <span class="badge badge-success"
                                                    style="color: black;">@Localizer["Completed"]</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-warning"
                                                    style="color: black;">@Localizer["NotCompleted"]</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="#" class="btn btn-sm btn-info">@Localizer["Edit"]</a>

                                            <!-- 删除表单 -->
                                            <form asp-action="Delete" method="post" style="display: inline;">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger"
                                                    onclick="return confirm('@Localizer["DeleteConfirmation"]');">
                                                    @Localizer["Delete"]
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <p>@Localizer["NoTodoItems"]</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>